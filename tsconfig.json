{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "removeComments": false,
        "alwaysStrict": true                  /* Parse in strict mode and emit "use strict" for each source file. */
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
